[Unit]
Description=Employee Management System Backend
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/EmployeeManagementSystem/backend
Environment="PATH=/home/ubuntu/EmployeeManagementSystem/backend/venv/bin"
EnvironmentFile=/home/ubuntu/EmployeeManagementSystem/backend/.env
ExecStart=/home/ubuntu/EmployeeManagementSystem/backend/venv/bin/uvicorn app.main:app --host 127.0.0.1 --port 8000

[Install]
WantedBy=multi-user.target
